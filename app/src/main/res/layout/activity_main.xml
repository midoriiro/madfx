    <midoriiro.io.material.knob.views.Knob
        android:id="@+id/frequency"
        android:enabled="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gain"
        app:name="Frequency"
        app:nameSize="20sp"
        app:minimumValue="10"
        app:maximumValue="30000"
        app:value="19166.5648564"
        app:minimumValueLabel="10 Hz"
        app:maximumValueLabel="30 kHz" />

    <midoriiro.io.material.knob.views.Knob
        android:id="@+id/gain"
        android:enabled="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/frequency"
        app:layout_constraintRight_toLeftOf="@id/width"
        app:name="Gain"
        app:nameSize="20sp"
        app:minimumValue="-30"
        app:maximumValue="30"
        app:value="0"
        app:minimumValueLabel="-30"
        app:maximumValueLabel="+30"/>

    <midoriiro.io.material.knob.views.Knob
